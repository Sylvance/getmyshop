<ul id="category-dropdown" class="nav-link-items">
  <% @menu_categories.each do |category| %>
    <li class= "col l3 cat" style="margin: 10px 0">
      <%= link_to category.name, category_path(category), class: "black-text upcase" %>
      <div class="display-products">
      <% category.subcategories.limit(4).each do |subcategory| %>
        <ul>
          <div class="row">
              <li class="col s10 offset-s1 center-align">
                <%= link_to subcategory.name, subcategory_path(category.id, subcategory.id ), class: "center-align #{@shop.color}-text" %>
              </li>
          </div>
        </ul>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
