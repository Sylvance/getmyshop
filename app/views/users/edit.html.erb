<%= render "header" %>
<div class="signin-box">
  <div class="container">
    <div class="row">
      <div class= "col s3">
        <div class="account-sidebar">
          <a href="#">
            <div class="sidebar-items">
              <i class="fa fa-user" aria-hidden="true"></i><span>&nbsp;&nbsp;My Profile</span>
            </div>
          </a>

          <a href="#">
            <div class="sidebar-items">
              <i class="fa fa-envelope" aria-hidden="true"></i><span>&nbsp;&nbsp;Manage Address</span>
            </div>
          </a>

          <%= link_to past_orders_path do %>
            <div class="sidebar-items">
              <i class="fa fa-list" aria-hidden="true"></i><span>&nbsp;&nbsp;Past Orders</span>
            </div>
          <% end %>

          <%= link_to wishlist_index_path do %>
            <div class="sidebar-items">
              <i class="fa fa-heart" aria-hidden="true"></i><span>&nbsp;&nbsp;My Wishlist</span>
            </div>
          <% end %>

          <a href="#">
            <div class="sidebar-items">
              <i class="fa fa-trash" aria-hidden="true"></i><span>&nbsp;&nbsp;Delete Account</span>
            </div>
          </a>
        </div>
      </div>
       <div class= "col s9">
        <div class="profile">

          <div class="result-header">
            EDIT PROFILE
          </div>

          <%= form_for current_user do |f| %>
            <div class="profile-fields">
              <div class="row">
                <div class="col s6">
                  <%= f.label :first_name, "First Name" %>
                   <%= f.text_field :first_name, required: "required", minlenght: 2, class: "" %>
                </div>
                <div class="col s6">
                  <%= f.label :last_name, "Last Name" %>
                   <%= f.text_field :last_name, required: "required", minlenght: 2, class: "" %>
                </div>
              </div>

              <div class="row">
                <div class="col s6">
                 <%= f.label :email, "Email" %>
                  <%= f.text_field :email, required: "required", minlenght: 2, class: "" %>
                </div>
              </div>
               <%= f.submit "Update", class: "btn btn-flat" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "footer" %>
<%= link_to "Past Orders", past_orders_path %>
