<%= render partial: 'header' %>

<div class="container">
  <div class="order-forms-container">
    <h4>
      Fill in the delivery information
    </h4>
    <%= check_address_errors %>

    <%= form_for @address, url: summary_orders_path, :method => :post do |f| %>
      <%= f.hidden_field :user_id %>
      <div class="row">
        <div class="col l6">
          <%= f.label :name, class: "bold black-text" %>
          <%= f.text_field :name, class: "validate", required: :required,  pattern: ".{3,100}", title: "3 to 100 characters required" %>
        </div>
        <div class="col l6">
          <%= f.label :email, class: "bold black-text" %>
          <%= f.email_field :email, class: "validate", required: :required,  pattern: ".{5,150}", title: "Valid email, 5 - 150 characters" %>
        </div>
      </div>
      <div class="row">
        <div class="col l6">
          <%= f.label :address, class: "bold black-text" %>
          <%= f.text_field :address, class: "validate", required: :required,  pattern: ".{5,}", title: "5 characters required" %>
        </div>
        <div class="col l6">
          <%= f.label :landmark, class: "bold black-text" %>
          <%= f.text_field :landmark %>
        </div>
      </div>
      <div class="row">
        <div class="col l6">
          <%= f.label :gender, class: "bold black-text"%>
          <%= f.select(:gender, class: "browser-default") do %>
            <% ['male', 'female'].each do |c| -%>
              <%= content_tag(:option, c, value: c) %>
            <% end %>
          <% end %>
        </div>
        <div class="col l6">
          <%= f.label :phone, class: "bold black-text" %>
          <%= f.text_field :phone, class: "validate", required: :required, pattern: ".{3,15}", title: "3 - 15 characters" %>
        </div>
      </div>
      <div class="row">
        <div class="col l4">
          <%= f.label :city, class: "bold black-text" %>
          <%= f.text_field :city, class: "validate", required: :required,  pattern: ".{2,100}", title: "2 - 100 characters" %>
        </div>
        <div class="col l4">
          <%= f.label :state, class: "bold black-text" %>
          <%= f.text_field :state, class: "validate", required: :required,  pattern: ".{2,100}", title: "2 - 100 characters" %>
        </div>
        <div class="col l4">
          <%= f.label :country, class: "bold black-text" %>
          <%= f.text_field :country, class: "validate", required: :required,  pattern: ".{2,100}", title: "2 - 100 characters" %>
        </div>
      </div>
      <div class="row">
        <div class="col m12">
          <%= f.submit "Save and Continue", class: "btn right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: 'footer' %>
