<div id="modal1" class="modal modal-fixed-footer">
  <%= form_for( @product, html: { multipart: true } ) do |f| %>
    <div class="modal-content">
      <h4>Add Product</h4>
      
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description, { required: true }  %>
      </div>

      <div class="field">
        <%= f.label :quantity %><br>
        <%= f.text_field :quantity, { required: true }  %>
      </div>

      <div class="field">
        <%= f.label :brand %><br>
        <%= f.text_field :brand, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :size %><br>
        <%= f.text_field :size, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :price %><br>
        <%= f.text_field :price, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
        <% if f.object.image? %>
          <%= image_tag f.object.image.thumb.url %>
          <%= f.label :remove_image %>
          <%= f.check_box :remove_image %> 
        <% end %>
      </div>

      <%= f.hidden_field :shop_owner_id, { value: shop_owner.id } %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "waves-effect waves-green btn-flat " %>
    </div>
  <% end %>
</div>
