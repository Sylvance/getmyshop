 <div id="modal1" class="modal modal-fixed-footer">
  <%= form_for( @product, html: { multipart: true } ) do |f| %>
    <div class="modal-content">
      <a class="btn btn-floating red" style="margin-left: 630px; position: fixed" data-position="top" data-delay="50" data-tooltip="Close"><i class="material-icons">not_interested</i></a>
      <h4 class="center-align">Enter Product Information</h4>
      
      <% if flash[:errors] %>
        <div id="error_explanation">
          <ul>
          <% flash[:errors].each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description, { required: true }  %>
      </div>

      <div class="field">
        <%= f.label :quantity %><br>
        <%= f.text_field :quantity, { required: true }  %>
      </div>

      <div class="field">
        <%= f.label :brand %><br>
        <%= f.text_field :brand, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :size %><br>
        <%= f.text_field :size, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :price %><br>
        <%= f.text_field :price, { required: true } %>
      </div>

      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>

    </div>
    <div class="modal-footer">
      <%= f.submit class: "waves-effect waves-green btn-flat " %>
    </div>
  <% end %>
</div>